<p id="notice"><%= notice %></p>

<h1>Listing Halls</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @halls.each do |hall| %>
      <tr>
        <td><%= hall.title %></td>
        <td><%= hall.text %></td>
        <td><%= image_tag hall.image.url(:thumb) %></td>
        <td><%= link_to 'Show', hall %></td>
        <td><%= link_to 'Edit', edit_hall_path(hall) %></td>
        <td><%= link_to 'Destroy', hall, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

